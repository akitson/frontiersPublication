keywords = {Adult,Female,Humans,Locomotion,Locomotion: physiology,Male,Online Systems,Orientation,Orientation: physiology,Spatial Behavior,Spatial Behavior: physiology,Young Adult},
month = jan,
number = {1},
pages = {61--71},
pmid = {20972774},
title = {{Dissociable cognitive mechanisms underlying human path integration.}},
