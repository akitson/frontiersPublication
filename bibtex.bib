issn = {15347362},
journal = {Journal of Vision},
number = {3},
pages = {4--4},
publisher = {Association for Research in Vision and Ophthalmology},
title = {{How real is virtual reality really? Comparing spatial updating using pointing tasks in real and virtual environments}},
