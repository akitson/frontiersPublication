pages = {9--17},
publisher = {Knirsch Verlag, Kirchentellinsfurt, Germany},
series = {(APGV)},
title = {{Spatial updating in real and virtual environments - contribution and interaction of visual and vestibular cues}},
url = {http://www.kyb.mpg.de/publication.html?publ=2764},
