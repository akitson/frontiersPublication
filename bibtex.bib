editor = {B\"{u}lthoff, H H and Fahle, M and Gegenfurtner, K G and Mallot, H A},
file = {:home/left\_leg/Dropbox/ALL\_the\_papers/Riecke/Riecke - 2004 - Spatial updating in real and virtual environments - contribution and interaction of visual and vestibular cues.pdf:pdf},
isbn = {1581139144},
