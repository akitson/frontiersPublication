	keywords = {Artificial Intelligence (incl. Robotics), Computer Imaging, Vision, Pattern Recognition and Graphics, Information Storage and Retrieval, Information Systems Applications (incl. Internet), Simulation and Modeling, User Interfaces and Human Computer Interaction},
	pages = {143--162},
	file = {Full Text PDF:/Users/alexandrakitson/Library/Application Support/Zotero/Profiles/bh7a4vkp.default/zotero/storage/DAVWMF2P/Riecke - 2012 - Are Left-Right Hemisphere Errors in Point-to-Origi.pdf:application/pdf;Snapshot:/Users/alexandrakitson/Library/Application Support/Zotero/Profiles/bh7a4vkp.default/zotero/storage/FRTBG9UJ/978-3-642-32732-2_9.html:text/html}
