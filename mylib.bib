@phdthesis{meier_loreta_2012,
	address = {United States -- Arizona},
	type = {{M.A.}},
	title = {{LORETA} neurofeedback and spatial cognition in healthy participants},
	copyright = {Copyright {ProQuest}, {UMI} Dissertations Publishing 2012},
	url = {http://search.proquest.com.ezproxy.library.ubc.ca/docview/1271757510/abstract?accountid=14656},
	abstract = {Electroencephalography ({EEG)} biofeedback is a clinical tool to help clients alter aspects of their {EEG.} One shortcoming of traditional {EEG} biofeedback is that it only measures neural activity on the surface of the scalp. Low resolution electromagnetic tomography ({LORETA)} is an inverse solution that estimates sources of {EEG} within the cortex. {LORETA} neurofeedback is an expansion of {EEG} biofeedback implemented to train neural activity in specific cortical locations. Previous studies have found alterations in {EEG} and improved cognitive ability in healthy participants after {LORETA} neurofeedback training. However, to date no published studies on {LORETA} neurofeedback have implemented a randomized control group design.
The history of {EEG} biofeedback was reviewed, and an empirical study using {LORETA} neurofeedback with a randomized control group design was conducted. Twenty healthy participants (age 18-26; 18 male) received 10 sessions of {LORETA} neurofeedback training. Participants were assigned to one of two groups. The first group was trained to increase power in the upper alpha frequency band (10-12 Hz) in Brodmann Area 7, while participants in the second group were trained to stabilize power. Based on previous {EEG} and {fMRI} studies, it was predicted that an increase in this frequency and cortical location would result in improved spatial cognition. Upper alpha power was measured before (eyes-opened baseline), during, and after (eyes-opened baseline) each of the ten sessions. Additionally, participants completed the Mental Rotation Test and the Purdue Spatial Visualization Test before and after the training.
Results indicated that those participants who were trained to stabilize their upper alpha power actually decreased power. Participants who were trained to increase power did not increase it significantly. Changes in upper alpha power were limited to measurements during training, and did not carry over to baseline assessments. No significant between-group effects on mental rotation tests were observed. The study provides further evidence that healthy participants can gain control over their neural activity. However, the study failed to demonstrate the main premise of {LORETA} neurofeedback, which is to facilitate changes in resting {EEG} and to improve behavior.},
	language = {English},
	urldate = {2013-07-23},
	school = {Northern Arizona University},
	author = {Meier, Marco},
	year = {2012},
	keywords = {Biofeedback, Brodmann Area 7, {EEG}, {LORETA}, Mental rotation, Neurofeedback, Psychology},
	file = {Meier 2012 LORETA neurofeedback and spatial cognition.pdf:/Users/alexandrakitson/Library/Application Support/Zotero/Profiles/bh7a4vkp.default/zotero/storage/8JH76X4X/Meier 2012 LORETA neurofeedback and spatial cognition.pdf:application/pdf;Snapshot:/Users/alexandrakitson/Library/Application Support/Zotero/Profiles/bh7a4vkp.default/zotero/storage/USNEKWF6/abstract.html:text/html}
