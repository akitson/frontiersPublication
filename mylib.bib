	keywords = {Ego–motion simulation, Psychophysics, spatial orientation, Spatial presence, Vection, Virtual reality},
	pages = {194–216},
	file = {ACM Full Text PDF:/Users/alexandrakitson/Library/Application Support/Zotero/Profiles/bh7a4vkp.default/zotero/storage/AVB4UK2I/Riecke et al. - 2006 - Cognitive Factors Can Influence Self-motion Percep.pdf:application/pdf}
